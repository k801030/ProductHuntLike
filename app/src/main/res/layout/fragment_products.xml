<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/product_item_padding"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#fff">
    <Button
        android:id="@+id/main_product_votes"
        android:layout_width="56dp"
        android:layout_height="@dimen/product_item_height"
        android:padding="0dp"
        android:textSize="10dp"
        android:text="â–²\nCOUNT">
    </Button>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/product_item_height"
        android:layout_weight="1"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Name"
            android:textStyle="bold"
            android:lines="1"/>
        <TextView
            android:id="@+id/main_product_tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a description. Everyone can say anything."/>
    </LinearLayout>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/maker_image"
        android:layout_width="@dimen/product_item_maker_image_size"
        android:layout_height="@dimen/product_item_maker_image_size"
        android:src="@drawable/profile_pic"
        app:riv_corner_radius="@dimen/product_item_maker_image_radius" />
</LinearLayout>
