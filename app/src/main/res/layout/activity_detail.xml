<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.ntu.vison.producthuntlike.DetailActivity"
    android:background="#fff">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#fff"
        >
        <Button
            android:id="@+id/vote"
            android:layout_width="56dp"
            android:layout_height="@dimen/product_item_height"
            android:padding="0dp"
            android:textSize="10dp"
            android:text="â–²\nCOUNT">
        </Button>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_topview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Name"
                android:textStyle="bold"
                android:lines="1"/>
            <TextView
                android:id="@+id/detail_topview_tagline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is a description.\n Everyone can say anything."/>

            <Button
                android:id="@+id/detail_topview_get_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:text="Get it!"/>

            <TextView
                android:id="@+id/detail_topview_footer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="via KEVIN  15 hours ago"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="7dp"
            android:background="#f5f5f5"
            android:text="Comment"/>

    </LinearLayout>

</LinearLayout>
